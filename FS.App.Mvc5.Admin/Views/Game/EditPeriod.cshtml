@model FS.App.Mvc5.Admin.Models.GamePeriodViewModel

<div>
    @Html.Action("Navbar")

    @using (Html.BeginForm("Periods", "Game", FormMethod.Post, new { area = "", id = "editForm" }))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.PeriodId)
        <div class="form-group">
            <div class="col-lg-12">
                <div class="col-lg-6">
                    @Html.LabelFor(m => m.Name)
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                </div>
                <div class="col-lg-6">
                    @Html.LabelFor(m => m.Value)
                    @Html.TextBoxFor(m => m.Value, new { @class = "form-control" })
                </div>
                <div class="col-lg-6">
                    @Html.LabelFor(m => m.PickStartDateTime)
                    @Html.TextBoxFor(m => m.PickStartDateTime, new { @class = "form-control datepicker" })
                </div>
                <div class="col-lg-6">
                    @Html.LabelFor(m => m.PickEndDateTime)
                    @Html.TextBoxFor(m => m.PickEndDateTime, new { @class = "form-control datepicker" })
                </div>
                <div class="col-lg-6">
                    @Html.LabelFor(m => m.ReportStartDateTime)
                    @Html.TextBoxFor(m => m.ReportStartDateTime, new { @class = "form-control datepicker" })
                </div>
                <div class="col-lg-6">
                    @Html.LabelFor(m => m.ReportEndDateTime)
                    @Html.TextBoxFor(m => m.ReportEndDateTime, new { @class = "form-control datepicker" })
                </div>
            </div>
            <div class="col-lg-12">
                <br />
                <button type="submit" class="btn btn-default">Update</button>
                <button onclick="top.location.href='@Url.Action("Periods")'; return false;" class="btn btn-default">Cancel</button>
            </div>
        </div>
    }
</div>