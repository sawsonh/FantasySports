@model FS.App.Mvc5.Admin.Models.GamePeriodViewModel

<div>
    @Html.Action("Navbar")
    @using (Html.BeginForm("AddPeriod", "Game", FormMethod.Post, new {area = "", id = "addForm"}))
    {
        @Html.AntiForgeryToken()
        @Html.Hidden("periodId")
        <div class="form-group">
            <p>
                <fieldset>
                    <div id="periods" class="col-lg-12"></div>
                    <div class="col-lg-12" style="padding: 10px 0 0 30px;">
                        <button type="button" id="addPeriod" class="btn btn-xs btn-default">Add</button>
                    </div>
                </fieldset>
            </p>
            <p>
                <button type="submit" class="btn btn-default">Submit</button>
                <button onclick="top.location.href = '@Url.Action("Periods")';return false;" class="btn btn-default">Cancel</button>
            </p>
        </div>
    }
</div>

<script id="addTemplate" type="text/x-custom-template">
    <div class="parent">
        <div class="col-lg-2">
            @Html.LabelFor(m => m.Name)
            @Html.TextBoxFor(m => m.Name, new {@class = "form-control"})
        </div>
        <div class="col-lg-1">
            @Html.LabelFor(m => m.Value)
            @Html.TextBoxFor(m => m.Value, new {@class = "form-control"})
        </div>
        <div class="col-lg-2">
            @Html.LabelFor(m => m.PickStartDateTime)
            @Html.TextBoxFor(m => m.PickStartDateTime, new {@class = "form-control datepicker"})
        </div>
        <div class="col-lg-2">
            @Html.LabelFor(m => m.PickEndDateTime)
            @Html.TextBoxFor(m => m.PickEndDateTime, new {@class = "form-control datepicker"})
        </div>
        <div class="col-lg-2">
            @Html.LabelFor(m => m.ReportStartDateTime)
            @Html.TextBoxFor(m => m.ReportStartDateTime, new {@class = "form-control datepicker"})
        </div>
        <div class="col-lg-2">
            @Html.LabelFor(m => m.ReportEndDateTime)
            @Html.TextBoxFor(m => m.ReportEndDateTime, new {@class = "form-control datepicker"})
        </div>
        <div class="col-lg-1" style="padding-top: 15px;">
            <a href="#" class="remove"><i class="fa fa-fw fa-close"></i></a>
        </div>
    </div>
</script>

@section scripts {
    @Scripts.Render("~/bundles/game/addperiod")
}