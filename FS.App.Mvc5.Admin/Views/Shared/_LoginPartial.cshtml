@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", new { area = "" }, FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()
    }

    <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-user"></i> @User.Identity.GetUserName() <b class="caret"></b></a>
    <ul class="dropdown-menu">
        <li>
            <a href="@Url.Action("Index", "Profile", new { area = "" })"><i class="fa fa-fw fa-user"></i> Profile</a>
        </li>
        <li>
            <a href="#"><i class="fa fa-fw fa-envelope"></i> Inbox</a>
        </li>
        <li>
            <a href="@Url.Action("Index", "Configurations", new { area = "" })"><i class="fa fa-fw fa-gear"></i> Configurations</a>
        </li>
        <li class="divider"></li>
        <li>
            <a href="javascript:document.getElementById('logoutForm').submit()"><i class="fa fa-fw fa-power-off"></i> Log Out</a>
        </li>
    </ul>
}
else
{
    <a href="@Url.Action("Login", "Account", new { area = "" })" id="loginLink"><i class="fa fa-user"></i> Log In <b class="caret"></b></a>
}


