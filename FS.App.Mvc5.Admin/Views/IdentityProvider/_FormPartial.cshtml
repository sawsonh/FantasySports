@model FS.App.Mvc5.Admin.Models.IdentityProviderViewModel
@{
    string formPostTo = ViewBag.FormPostTo.ToString();
    string formCancelTo = ViewBag.FormCancelTo.ToString();
    string formPostButton = ViewBag.FormPostButton.ToString();
}
@using (Html.BeginForm(formPostTo, "IdentityProvider", FormMethod.Post, new { area = "", id = $"{formPostButton.ToLower()}Form" }))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        <div class="col-lg-12">
            <div class="col-lg-6">
                @Html.LabelFor(m => m.Name)
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
            </div>
            <div class="col-lg-6">
                @Html.LabelFor(m => m.AppId)
                @Html.TextBoxFor(m => m.AppId, new { @class = "form-control" })
            </div>
        </div>
        <div class="col-lg-12">
            <br />
            <button type="submit" class="btn btn-default">@formPostButton</button>
            <button onclick="top.location.href='@Url.Action(formCancelTo, new { id = "" })'; return false;" class="btn btn-default">Cancel</button>
        </div>
    </div>
}
